class Solution {
public:
    int maximum69Number (int num) {
        int temp = num;
        int pos = -1, idx = 0;

        while (temp > 0) {
            if (temp % 10 == 6) pos = idx;
            temp /= 10;
            idx++;
        }

        if (pos == -1) return num;
        return num + 3 * pow(10, pos);
    }
};


class Solution {
public:
    int maximum69Number (int num) {
        string temp=to_string(num);
        for(int i=0;i<temp.size();i++){
            if(temp[i]=='6'){
                temp[i]='9';
                break;
            }
        }
        return stoi(temp);
    }
};
