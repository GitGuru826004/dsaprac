class Solution {
public:
    int maximumUnits(vector<vector<int>>& boxTypes, int truckSize) {
        sort(boxTypes.begin(),boxTypes.end(),[&](vector<int> a ,vector<int>b){
            return a[1]>b[1];
        });
        int ans=0;
        for(int i=0;i<boxTypes.size();i++){
            int no= boxTypes[i][0];
            int per=boxTypes[i][1];
            if(truckSize>=no){
                ans+=no*per;
                truckSize-=no;
            }else{
                ans+=per*truckSize;
                break;
            }
        }
        return ans;
    }
};
