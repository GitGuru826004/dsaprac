class Solution {
public:
    bool isPowerOfTwo(int n) { return n > 0 && (n & (n - 1)) == 0; }
};

class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n<=0) return false;
        if(n==1) return true;
        if(n%2==1) return false;
        return isPowerOfTwo(n/2);
    }
};

class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n<=0) return false;
        
        while(n>1){
            if(n%2==1) return false;
            n/=2;
        }
        return true;
    }
};

class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n<=0) return false;

        while(n%2==0){
            n/=2;
        }
        return n==1;
    }
};
