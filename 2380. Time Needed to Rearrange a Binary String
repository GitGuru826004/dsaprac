TLE 

class Solution {
public:
    int secondsToRemoveOccurrences(string s) {
        int n = s.length();
        int cnt=0;
        bool changed=true;  //changed is true initially, so we enter the while loop.
        while(true){
            changed=false;  // assume no swaps will happen this second
            for(int i=0;i+1<n;i++){
                if(s[i]=='0' && s[i+1]=='1'){
                    s[i]='1';
                    s[i+1]='0';
                    i++; //avoid double-swapping
                    changed=true; // we did some work this second
                }
            }
            if(changed)cnt++;
        }
        return cnt;
    }
};
