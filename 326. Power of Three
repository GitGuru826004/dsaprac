class Solution {
public:
    bool isPowerOfThree(int n) {
        return n>0 && 1162261467%n==0;  // pow(3,19);
    }
};


class Solution {
public:
    bool isPowerOfThree(int n) {
        if(n<=0)return false;
        while(n%3==0){
            n /=3;
        };
        return n==1;
    }
};


class Solution {
public:
    bool isPowerOfThree(int n) {
        if(n==0)return false;
        else if(n==1)return true;
        return n%3==0 && isPowerOfThree(n/3);
    }
};
