class Solution {
public:
    int largestRectangleArea(vector<int>& heights) {
        int n = heights.size();
        int maxi=INT_MIN;
        for(int i=0;i<n;i++){
            int height=heights[i];
            int j=i,k=i;
            while(j>=0 && heights[j]>=heights[i])j--;
            while(k<n && heights[k]>=heights[i])k++;
            int width=k-j-1;
            maxi=max(height*width,maxi);
        }
        return maxi;
    }
};


class Solution {
public:
    int largestRectangleArea(vector<int>& heights) {
        int n = heights.size();
        int maxi=0;
        for(int i=0;i<n;i++){
            int minheight=INT_MAX;
            for (int j=i;j<n;j++){
                minheight=min(minheight,heights[j]);
                maxi=max(maxi,minheight*(j-i+1));
            }
        }
        return maxi;
    }
};

